<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PRACTICA5finalfinal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cyan_400</item>
        <item name="colorSecondaryVariant">@color/cyan_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Text appearance -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>


        <!-- Button styling -->
        <item name="buttonStyle">@style/Widget.ButtonCustom</item>
    </style>

    <!-- Custom NoActionBar Theme -->
    <style name="Theme.PRACTICA5finalfinal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay -->
    <style name="Theme.PRACTICA5finalfinal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay -->
    <style name="Theme.PRACTICA5finalfinal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Button Style -->
    <style name="Widget.ButtonCustom" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/cyan_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
